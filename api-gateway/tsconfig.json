{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "./public/js",
    "rootDir": "./src/ts",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "types": [
      "node",
      "undici-types"
    ]
  },
  "include": ["src/ts/**/*"],
  "exclude": ["node_modules"]
}

